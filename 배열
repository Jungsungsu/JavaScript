        // 모든 타입의 데이터를 넣을 수 있다.
        let arr3 = [1, "정형", true, [1,2]];

        // 선언된 배열에 데이터를 넣는 방법
        arr[0] ="값";

        // 배열의 길이를 구하기 .length
